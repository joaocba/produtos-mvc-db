@model ProdutosMVC.Models.Product

@{
    ViewData["Title"] = @Model.Name;
}

<section id="product-detail" class="container mt-4">
    <div class="container">
        <div class="row justify-content-end mt-4">
            <div class="col-auto">
                <a class="px-3 btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@Model.Id">
                    <i class="fas fa-edit"></i> Edit Product
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 mb-4">
                <img id="main-product-image" src="https://placehold.co/500" alt="@Model.Name"
                    class="img-fluid rounded shadow-sm mb-3">
                <div class="thumbnail-gallery">
                    <img src="https://placehold.co/100" alt="@Model.Name Thumbnail 1" class="img-thumbnail">
                    <img src="https://placehold.co/100" alt="@Model.Name Thumbnail 2" class="img-thumbnail">
                    <img src="https://placehold.co/100" alt="@Model.Name Thumbnail 3" class="img-thumbnail">
                    <img src="https://placehold.co/100" alt="@Model.Name Thumbnail 4" class="img-thumbnail">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h2 class="card-title text-primary">@Model.Name</h2>
                        <h4 class="card-subtitle mb-3 text-muted">€ @Model.Price</h4>
                        <p>In Stock:
                            <span class="ms-1 stock-tag @(Model.InStock ? "in-stock" : "out-of-stock")">
                                <i class="fas @(Model.InStock ? "fa-check" : "fa-times")"></i>
                                @(Model.InStock ? "Available" : "Out of Stock")
                            </span>
                        </p>
                        <div class="form-group mb-3">
                            <label for="quantity" class="mb-1">Quantity</label>
                            <input type="number" id="quantity" class="form-control w-25" min="1" max="99" value="1">
                        </div>
                        <button class="btn btn-primary btn-lg">Add to Cart</button>
                    </div>
                </div>
                <div class="mt-4">
                    <h5 class="text-secondary">Description</h5>
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
        <div class="related-products mt-5">
            <h3 class="text-secondary">Related Products</h3>
            <div class="row">
                @* Exemplo estatico para um bloco de produtos relacionados *@
                @for (int i = 1; i <= 4; i++)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card shadow-sm border-0">
                            <img src="https://placehold.co/200" alt="Related Product @i" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">Related Product @i</h5>
                                <p class="card-text text-muted">€ @Model.Price</p>
                                <a href="#" class="btn btn-outline-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
</section>
