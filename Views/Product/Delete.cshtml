@model ProdutosMVC.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Product</h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-center text-danger mb-4">Are you sure you want to delete this product?</h5>
                    <div class="mb-3">
                        <h4 class="text-center">@Model.Name</h4>
                        <dl class="row mt-3">
                            <dt class="col-sm-4">Price</dt>
                            <dd class="col-sm-8">@Model.Price.ToString("C")</dd>
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                            <dt class="col-sm-4">In Stock</dt>
                            <dd class="col-sm-8">@Model.InStock</dd>
                        </dl>
                    </div>
                    <form asp-action="Delete" method="post" class="text-center">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger mx-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>